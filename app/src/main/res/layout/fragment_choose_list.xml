<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_fragment_background"
    tools:context=".fragments.ChooseListFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewListOfHeroes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/separateView"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/view_all_heroes"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <View
        android:id="@+id/separateView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewListOfFavouriteHeroes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/separateView"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/view_favourite_heroes"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="25dp" />
</RelativeLayout>
